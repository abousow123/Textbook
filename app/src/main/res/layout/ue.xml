<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nomUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"

        android:text="TextView"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/affCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="@string/creditUE"
        android:textSize="18dp"
        android:layout_below="@+id/nomUE"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/credit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/affCredit"
        android:layout_toEndOf="@+id/nomUE"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/affResp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/affCredit"
        android:layout_below="@+id/affCredit"
        android:layout_marginTop="39dp"
        android:text="@string/responsable"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/affResp"
        android:layout_alignEnd="@+id/credit1"
        android:text="TextView"
        android:textSize="18dp" />
</RelativeLayout>