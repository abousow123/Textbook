<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sow_a.textbook.activites.AjoutCour"
    tools:showIn="@layout/activity_ajout_cour">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/ne1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="horizontal" >

            <TimePicker
                android:id="@+id/timePicker4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/spinner"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="37dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="@string/heureDeb"
                android:textIsSelectable="true"
                android:textSize="25dp"
                android:layout_alignBottom="@+id/timePicker4"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="35dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginTop="34dp"
                android:layout_weight="1"
                android:text="@string/matiere"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/textView7"
                android:layout_toEndOf="@+id/textView10" />

            <TimePicker
                android:id="@+id/timePicker2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/timePicker4"
                android:layout_alignStart="@+id/timePicker4" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heureFin"
                android:textSize="25dp"
                android:layout_above="@+id/textView11"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginBottom="33dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:text="@string/description"
                android:textSize="25dp"
                android:layout_below="@+id/timePicker2"
                android:layout_alignStart="@+id/textView10" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_toEndOf="@+id/textView9" />

            <Button
                android:id="@+id/buttonCour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_toEndOf="@+id/textView11"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>
